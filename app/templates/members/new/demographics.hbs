<div class="form-group {{if this.errors.province 'error'}}">
  <label for="name">Provincia</label>
  <ListCombo @items={{this.model.provinces}} @fieldMember={{this.model.member.province}}/>
  {{#if this.errors.province }}
    <span class="help-block">{{this.errors.province.[0].message}}</span>
  {{/if}}
</div>

<div class="form-group {{if this.errors.city 'error'}}">
  <label for="name">Ciudad</label>
  <Input type="text" placeholder="Ciudad" @value={{this.model.member.city}} class="form-control" size="50" />
  {{#if this.errors.city }}
    <span class="help-block">{{this.errors.city.[0].message}}</span>
  {{/if}}
</div>

